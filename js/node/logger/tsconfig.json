{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "outDir": "./out",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "pretty": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
